@model ThePhotoShop5.Models.Email
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Email</title>
</head>
<body>
    
    <div>
        @using (Html.BeginForm("Index", "Emails", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @*<center>*@
                <h2>Email S/H Photography.</h2>
                <hr />
                <table>
                    <tr>
                        @*<td style="width: 100px">
                            To:
                        </td>
                        <td>@Html.TextBoxFor(model => model.To)</td>
                    </tr>
                    <tr>*@
                        <td>
                            From:
                        </td>
                        <td>@Html.TextBoxFor(model => model.From)</td>
                    </tr>
                    <tr>
                        <td>
                            Subject:
                        </td>
                        <td>@Html.TextBoxFor(model => model.Subject)</td>
                    </tr>
                    <tr>
                        <td valign="top">
                            Body:
                        </td>
                        <td>@Html.TextAreaFor(model => model.Body, new { rows = "15", cols = "500" })</td>
                    </tr>
                    <tr>
                        <td>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn btn-primary btn-md" value="Send" />
                                </div>
                            </div>
                        </td>
                    </tr>
                </table>
                <br />
                <span style="color:green">@ViewBag.Message</span>
            @*</center>*@
        }
    </div>
</body>
</html>

