@model IEnumerable<ThePhotoShop5.Models.Invoice>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @if (User.IsInRole("Owner"))
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Client.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Client.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reservation.AppointmentDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AmountDue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InvoicePaid)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Client.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Client.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Reservation.AppointmentDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AmountDue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InvoicePaid)
        </td>
        <td>
            @if (User.IsInRole("Owner"))
            {
                @Html.ActionLink("Edit ", "Edit", new { id = item.InvoiceId, @class = "nav-link" })
                @Html.ActionLink("Details ", "Details", new { id = item.InvoiceId, @class = "nav-link" })
                @Html.ActionLink("Delete ", "Delete", new { id = item.InvoiceId, @class = "nav-link" })
            }

        </td>
        <td>
            @if (User.IsInRole("Client"))
            {
                @Html.ActionLink("Make Deposit", "PaymentMade", "Clients", new { area = "" }, new { @class = "btn btn-primary btn-md" })
            }
        </td>
    </tr>
}

</table>
